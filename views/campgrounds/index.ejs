<% include ../partials/header %>


<div class=container>
	
	<header class="jumbotron jumbotron-fluid">
	<div class="container">
	<h1>
		<strong>Welcome To Yelpcamp!</strong>
	</h1> 
	<p> <strong>Here You Can Find All The Camping Sites! </strong>
		
		</p>
	<a href="/campgrounds/new"><button class="btn btn-success ">
		Add New Site
		</button></a>
	</div>
	</header>
	<div class="row">
		<div class="col-lg-12">
			<h3 style="color:#2F4F4F"><strong>Most Visiting Sites!</strong></h3>
		</div>
	</div>
    <div class="row text-center" style="display:flex;flex-wrap:wrap;">
	<% campgrounds.forEach(function(campground){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail cool">
				<img src="<%= campground.image %>">
				<div class="caption">
					<h4 style="color:#2F4F4F"><%= campground.name %> </h4>
				</div>
				<p>
					<a href="/campgrounds/<%= campground._id %>" class="btn btn-success">More Info</a>
				</p>
				
			</div>
				

		</div>
	<% });  %>
	</div>
</div>
<% include ../partials/footer %>

